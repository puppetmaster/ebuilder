%h1 Project :

%p
  %a{:href => "/project/edit/#{@project.id}"} Edit
  %a{:href => "/project/delete/#{@project.id}"} Delete
%table
  - @project.attributes.each_pair do |atr,val|
    - if "#{atr}" != "id"
      %tr
        %th= atr.capitalize
        %td= val
%h3= "Build Options for #{@project.name}"
%table{:border => '1'}
  %th Option
  %th Host
  %tr
  - @options.each do |opt|
    %td= opt.opt
    - host = Slave.get(opt.slave_id)
    %td
      %a{:href => "/slave/show/#{host.id}"}= host.name
    %tr

%br
